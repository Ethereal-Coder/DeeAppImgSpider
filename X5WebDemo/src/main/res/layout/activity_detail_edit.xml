<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".detail.DetailEditActivity">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="48dp">
		<Button
				android:text="返回"
				android:layout_marginLeft="5dp"
				android:layout_centerVertical="true"
				android:id="@+id/detail_edit_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<TextView
				android:id="@+id/tv_detail_edit_toolbar_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:ellipsize="end"
				android:singleLine="true"
				android:text="大鱼水果旗舰店"/>
		<Button
				android:id="@+id/btn_select_shop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="5dp"
				android:text="切换店铺"/>
	</RelativeLayout>

	<android.support.v4.widget.NestedScrollView
			android:layout_marginTop="48dp"
			android:fillViewport="true"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:padding="3dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="60dp">
				<TextView
						android:gravity="center"
						android:text="标题"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<EditText
						android:hint="title"
						android:maxLines="2"
						android:textSize="12sp"
						android:gravity="start"
						android:id="@+id/et_detail_edit_name"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="40dp">
				<TextView
						android:gravity="center"
						android:text="市场价格/元"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<EditText
						android:inputType="number"
						android:textSize="12sp"
						android:hint="price"
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/et_detail_edit_price"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:minHeight="80dp"
					android:layout_height="wrap_content">
				<TextView
						android:gravity="center_horizontal"
						android:text="商品主图"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<android.support.v7.widget.RecyclerView
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_edit_main"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:id="@+id/ll_edit_scale"
					android:minHeight="80dp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:gravity="center_horizontal"
						android:text="商品缩略图"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<android.support.v7.widget.RecyclerView
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_edit_scale"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:minHeight="80dp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:gravity="center_horizontal"
						android:text="商品轮播图"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<android.support.v7.widget.RecyclerView
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_edit_banner"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:minHeight="80dp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:gravity="center_horizontal"
						android:text="商品详情图"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<android.support.v7.widget.RecyclerView
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_edit_detail"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<LinearLayout
					android:id="@+id/ll_edit_sku"
					android:visibility="visible"
					android:minHeight="80dp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:id="@+id/tv_edit_sku"
						android:gravity="center_horizontal"
						android:text="商品规格图"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"/>
				<android.support.v7.widget.RecyclerView
						android:singleLine="true"
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_edit_sku"
						android:background="@drawable/et_share_title_bg"
						android:layout_weight="3"
						android:layout_width="0dp"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
					android:id="@+id/ll_1688_edit_sku"
					android:visibility="gone"
					android:minHeight="80dp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:gravity="center"
						android:text="商品规格"
						android:layout_width="match_parent"
						android:layout_height="30dp"/>
				<View
						android:layout_marginTop="3dp"
						android:layout_marginBottom="3dp"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#ececec"/>
				<android.support.v7.widget.RecyclerView
						android:gravity="center_vertical"
						android:id="@+id/rv_detail_1688_edit_sku"
						android:background="@drawable/et_share_title_bg"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<View
					android:layout_marginTop="3dp"
					android:layout_marginBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>
			<TextView
					android:id="@+id/tv_scan"
					android:textColor="#ffffff"
					android:background="#fd6363"
					android:gravity="center"
					android:text="预览"
					android:layout_width="match_parent"
					android:layout_height="40dp"/>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>

</RelativeLayout>