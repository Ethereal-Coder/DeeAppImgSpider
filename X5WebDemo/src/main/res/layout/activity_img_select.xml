<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".detail.ImgSelectActivity">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal">
		<TextView
				android:id="@+id/tv_img_select_cancel"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="取消"/>
		<TextView
				android:id="@+id/tv_img_select_clear"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#3aafa3"
				android:gravity="center"
				android:text="清除所选"
				android:textColor="#ffffff"/>
		<TextView
				android:id="@+id/tv_img_select_complete"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="#da4f4f"
				android:gravity="center"
				android:text="选取完成"
				android:textColor="#ffffff"/>
	</LinearLayout>
	<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_img_select"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="42dp"/>

</RelativeLayout>