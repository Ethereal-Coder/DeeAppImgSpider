<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".detail.SkuEditActivity">
	<android.support.v4.widget.NestedScrollView
			android:layout_above="@+id/ll_bottom_operate"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			<RadioGroup
					android:layout_width="match_parent"
					android:layout_height="60dp">
				<LinearLayout
						android:orientation="horizontal"
						android:weightSum="3"
						android:layout_width="match_parent"
						android:layout_height="match_parent">
					<RadioButton
							android:checked="true"
							android:id="@+id/rbn_single"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="match_parent"
							android:button="@null"
							android:drawableLeft="@drawable/feedback_selector"
							android:text="单品"
							android:textColor="#444444"
							android:textSize="12sp"/>
					<RadioButton
							android:id="@+id/rbn_one"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="match_parent"
							android:button="@null"
							android:drawableLeft="@drawable/feedback_selector"
							android:text="一种规格"
							android:textColor="#444444"
							android:textSize="12sp"/>
					<RadioButton
							android:id="@+id/rbn_two"
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_height="match_parent"
							android:button="@null"
							android:drawableLeft="@drawable/feedback_selector"
							android:text="两种规格"
							android:textColor="#444444"
							android:textSize="12sp"/>
				</LinearLayout>
			</RadioGroup>
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#ececec"/>

			<LinearLayout
					android:orientation="vertical"
					android:layout_marginBottom="5dp"
					android:background="@drawable/et_share_title_bg"
					android:id="@+id/ll_spinner_first"
					android:layout_width="match_parent"
					android:layout_height="200dp">
				<android.support.v7.widget.AppCompatSpinner
						android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"
						android:id="@+id/acp_first"
						android:entries="@array/week"
						android:layout_width="200dp"
						android:layout_height="wrap_content"/>
				<View android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#ececec"/>
				<android.support.v7.widget.RecyclerView
						android:layout_marginTop="10dp"
						android:id="@+id/rv_acp_first"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:orientation="vertical"
					android:background="@drawable/et_share_title_bg"
					android:id="@+id/ll_spinner_second"
					android:layout_width="match_parent"
					android:layout_height="200dp">
				<android.support.v7.widget.AppCompatSpinner
						android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"
						android:id="@+id/acp_second"
						android:entries="@array/week"
						android:layout_width="200dp"
						android:layout_height="wrap_content"/>
				<View android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#ececec"/>
				<android.support.v7.widget.RecyclerView
						android:layout_marginTop="10dp"
						android:id="@+id/rv_acp_second"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>

			</LinearLayout>

		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
	
<LinearLayout
		android:id="@+id/ll_bottom_operate"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="42dp">
	<TextView
			android:textColor="#ffffff"
			android:background="#42a1dd"
			android:gravity="center"
			android:id="@+id/tv_cancel"
			android:text="cancel"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"/>
	<TextView
			android:textColor="#ffffff"
			android:background="#fd6363"
			android:gravity="center"
			android:id="@+id/tv_commit"
			android:text="commit"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"/>
</LinearLayout>
</RelativeLayout>