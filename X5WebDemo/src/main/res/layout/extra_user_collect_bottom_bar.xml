<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/rl_user_collect_bottpm"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="#ffffff">
	<RelativeLayout
			android:id="@+id/tv_follow"
			android:layout_width="128dp"
			android:layout_height="34dp"
			android:layout_centerInParent="true"
			android:layout_margin="7dp"
			android:background="@drawable/register_backgroud">

		<TextView
				android:id="@+id/tv_user_collect_bottom_follow"
				android:layout_width="17dp"
				android:layout_height="15dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:background="@mipmap/user_collect_bottom_share"/>
		<TextView
				android:id="@+id/tv_collect_bottom_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="5dp"
				android:layout_toRightOf="@id/tv_user_collect_bottom_follow"
				android:textColor="#333333"
				android:textSize="14dp"/>
	</RelativeLayout>

	<TextView
			android:id="@+id/tv_share"
			android:layout_width="22dp"
			android:layout_height="21dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="19dp"
			android:background="@mipmap/user_collect_bottom_follow"
			android:visibility="gone"

	/>

</RelativeLayout>
